resource "aws_iam_role" "scholar" {
  name = "eks-cluster-scholar"

  assume_role_policy = <<POLICY
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Service": "eks.amazonaws.com"
      },
      "Action": "sts:AssumeRole"
    }
  ]
}
POLICY
}

#EKSClusterPolicy
resource "aws_iam_role_policy_attachment" "scholar_AmazonEKSClusterPolicy" {
  policy_arn = "arn:aws:iam::aws:policy/AmazonEKSClusterPolicy"
  role       = aws_iam_role.scholar.name
}

# EKSServicePolicy
resource "aws_iam_role_policy_attachment" "scholar_AmazonEKSServicePolicy" {
  policy_arn = "arn:aws:iam::aws:policy/AmazonEKSServicePolicy"
  role       = aws_iam_role.scholar.name
}
